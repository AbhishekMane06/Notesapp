				{
					"name": "Login (POST /api/auth/login)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"try {",
									"  const json = pm.response.json();",
									"  if (json && json.token) {",
									"    pm.environment.set('jwt', json.token);",
									"    console.log('Saved jwt to environment variable: jwt');",
									"  } else if (json && json.data && json.data.token) {",
									"    pm.environment.set('jwt', json.data.token);",
									"    console.log('Saved jwt to environment variable: jwt');",
									"  }",
									"} catch (e) { console.log('No JSON response or token not present'); }"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
